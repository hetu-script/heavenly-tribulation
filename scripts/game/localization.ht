import 'game.ht'

fun addLocalizations(langs: List) {
  for (final lang in langs) {
    final langId = lang.id
    final langData = game.localizations[langId]
    for (final key in lang.keys) {
      langData[key] = lang[key]
    }
  }
}

fun setCurrentLocalization(id: str) {
  game.localizations.current = game.localizations[id]
}

fun getCurrentLocalizationData {
  return game.localizations.current.toJson()
}