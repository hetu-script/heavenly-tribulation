
const kCharacterAttributeNames = [
  'strength',
  'constitution',
  'spirituality',
  'willpower',
  'perception',
  'dexterity',
]

function generateCharacterAttributes(maxStats, minValue) {
  assert(maxStats != null)
  assert(minValue != null)

  const attributes = {}
  
  let rest = maxStats
  for (const name in random.shuffle(kCharacterAttributeNames)) {
    const value = Random().nextInt(rest)
    attributes[name] = value + minValue
    rest -= value
  }
  attributes[list.last] = rest + minValue
  return attributes
}

for (const i in range(5)) {
  const attr = generateCharacterAttributes(20, 10)
  print(attr)
}