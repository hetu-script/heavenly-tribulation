import '../binding/cardgame.ht'

/// 战斗状态脚本
/// 每张状态都对应一个脚本
/// 这个脚本将会根据该状态在回合开始时

namespace StatusEffect {

  function block_self_turn_start(self, opponent) {
    
  }

  function block_self_attacked(self, opponent, args) {
    let damage = args['damage']
    let residue = self.removeStatusEffect('block', damage)
    args['damage'] = residue
  }
}
