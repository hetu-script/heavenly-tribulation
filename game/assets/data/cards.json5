  attack_punch: {
    // 不同的词条可能有相同的affixId，非null的affixId只会在一张卡牌上出现一次。
    id: "attack_punch",
    // 和 support_affix 不同，主词条的 uniqueId [是]数组，category [不是] 数组
    uniqueId: null,
    // 效果类型，分为攻击（attack），加持（buff），持续（ongoing），消耗（ephemeral）等
    category: "attack",
    // 流派，御剑，悟道，炼魂等，如果为null表示无流派
    // 流派仅表示获得方法，使用时并无流派限制
    genre: null,
    // kind决定了卡牌名字类型，例如剑法，咒语等等
    // 虽然并非强制，但多数时候kind和战斗动画也是对应的
    kind: "punch",
    // 攻击类型，一共五种，徒手，武器，法术，咒语，毒术
    attackType: "unarmed",
    // 伤害类型，一共五种，物理，真气，元素，精神，纯粹
    damageType: "physical",
    // 使用卡牌需要符合境界要求
    // 境界影响卡牌的额外词条数量和种类以及卡牌等级上限
    rank: 0,
    description: "affix_description_attack_unarmed",
    tags: [],
    // 卡牌插画
    image: "battlecard/illustration/attack_punch.png",
    // 前摇动画
    animation: "attack_punch",
    // 后摇动画（可选）
    recoveryAnimation: "attack_punch_recovery",
    // 叠加动画（爆炸效果等）
    // overlayAnimation: null,
    // 动画播放时的声音效果
    sound: "punch-or-kick-sound-effect-1-239696.mp3",
    // 调用的脚本函数的id
    script: "attack",
    // 是否是主词条，主词条会直接写在卡面上，额外词条会在光标浮窗中显示
    // 主词条不需要鉴定，额外词条签订前没有效果并且显示为问号
    isMain: true,
    // 只有主词条上会出现装备需求
    equipment: null,
    // 实际的数值会在游戏中实际创建时才添加到这里
    // 主词条等级始终和卡牌等级一致
    // level: 0,
    // value: [0]
    valueData: [
      {
        // 实际值=base+level*increment
        // 每个值可能有自己的maxLevel，大多数速度，闪避类的加成最高40级
        base: 4,
        increment: 0.45,
      },
    ],
  },
