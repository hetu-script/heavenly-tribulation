namespace debug {
  fun terrain {
    final position = getHeroPosition()
    final terrainIndex = tilePos2Index(position.left, position.top, game.world.width)
    final terrain
    final zone
    final entity
    if (currentMaze) {
      final map = currentMaze.levels[currentMaze.currentLevelIndex]
      terrain = map.terrains[terrainIndex]
      if (terrain.zoneIndex) {
        zone = map.zones[terrain.zoneIndex]
      }
      if (terrain.entityId) {
        entity = currentMaze.entities[terrain.entityId]
      }
    } else {
      terrain = game.world.terrains[terrainIndex]
      if (terrain.zoneIndex) {
        zone = game.world.zones[terrain.zoneIndex]
      }
      if (terrain.entityId) {
        entity = game.world.entities[terrain.entityId]
      }
    }
    engine.info('terrain:', terrain)
    if (zone) {
      engine.info('zone:', zone)
    }
    if (entity) {
      engine.info('entity:', entity)
    }
  }
}

