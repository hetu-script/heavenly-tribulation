fun testMerchant {
  setRandomSeed(1003)
  resetGame()
  final hero = Character()
  hero.money += 100
  setHeroId(hero.id)
  final merchant = Character()
  merchant.money += 500
  entityAcquireItem(merchant, Consumable.medicine(), count: 20)
  entityAcquireItem(merchant, Consumable.beverage(), count: 20)
