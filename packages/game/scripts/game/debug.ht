fun testMerchant {
  setRandomSeed(1003)
  resetGame()
  final hero = Character()
  hero.money += 100
  setHeroId(hero.id)
  final merchant = Character()
  merchant.money += 500
  characterAcquire(merchant, Medicine(), 20)
  characterAcquire(merchant, Beverage(), 20)
  showMerchant(merchant)
}

fun testMaze {
  setRandomSeed(1001)
  resetGame()
  // 先创建副本再创建英雄，这样会直接用localHistory替换掉hostory
  final maze = MountainMaze(
    name: '测试副本',
  )
  final hero = Character()
  hero.money += 200
  characterEquip(hero, Kickboxing())
  characterEquip(hero, Weapon())
  characterEquip(hero, Shield())
  characterAcquire(hero, Medicine(), 5)
  characterAcquire(hero, Beverage(), 5)
  final companion = VillageWarrior()
  characterEquip(companion, Weapon())
  characterEquip(hero, companion)
  setHeroId(hero.id)
  enterMaze(maze)
  return maze
}
