// 设定人物的随从，返回值是否成功
// 随从并非直接将人物数据放在人物上，而是用下面的数据结构
// {
//   id,
//   entityType,
// }
fun characterGetCompanion(character, companion) {
  if (character.companions.length >= _kCompanionMax) {
    engine.info('${character.name} 的随从数量已满，无法再添加新的随从。')
    return false
  }
  var companionData = {
    id: companion.id,
    entityType: companion.entityType,
  }
  character.companions[companionData.id] = companionData
}

fun characterDismissCompanion(character, companion) {
  delete character.companions[companion.id]
  if (companion.entityType == kEntityTypeNpc) {
    delete game.npcs[companion.id]
  }
}
