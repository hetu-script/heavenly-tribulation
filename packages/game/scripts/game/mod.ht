import 'game.ht'

fun getModById(id: str) {
  return mods[id]
}

fun addMod(mod) {
  engine.info('载入模组 [${mod.name}]')
  mods[mod.id] = mod
}

fun loadModToGame(mod) {
  game.mods[mod.id] = mod
}

fun loadModsToGame([modIdList]) {
  engine.info('向游戏中添加已安装的模组')
  if (modIdList != null) {
    for (final id in modIdList) {
      game.mods[id] = mods[id]
    }
  } else {
    game.mods = mods
  }
}
