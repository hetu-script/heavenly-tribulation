final kCharacterAttributeNames = [
  'strength',
  'superpower',
  'intelligence',
  'perception',
  'leadership',
  'management',
]

fun generateCharacterAttributes(maxStats, minValue) {
  assert(maxStats != null)
  assert(minValue != null)

  final attributes = {}
  
  var rest = maxStats
  for (final name in random.shuffle(kCharacterAttributeNames)) {
    final value = Random().nextInt(rest)
    attributes[name] = value + minValue
    rest -= value
  }
  attributes[list.last] = rest + minValue
  return attributes
}

for (final i in range(5)) {
  final attr = generateCharacterAttributes(20, 10)
  print(attr)
}