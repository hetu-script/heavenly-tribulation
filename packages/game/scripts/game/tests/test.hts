final kCharacterAttributeNames = [
  'strength',
  'superpower',
  'intelligence',
  'perception',
  'leadership',
  'management',
]

fun generateCharacterAttributes(maxStats, minValue, maxValue, [majorAttr]) {
  assert(maxStats != null)
  assert(minValue != null)
  assert(maxValue != null)

  final attributes = {}
  
  fun checkValue(value) {
    if (value < minValue) return minValue
    if (value > maxValue) return maxValue
    return value
  }
  
  for (final name in random.shuffle(kCharacterAttributeNames)) {
    var min = minValue
    if (majorAttr && name == majorAttr) {
      min = maxStats / list.length * 0.75
    }
    final value = (
      Math.gaussianNoise(
        maxStats / list.length * 0.6,
        20,
        min: min,
        max: maxValue,
        randomGenerator: random,
      )
    ).toInt()
    attributes[name] = checkValue(value)
  }
  return attributes
}

for (final i in range(10)) {
  final a = generateCharacterAttributes(600, 1, 100, 'strength')
  print(a)
}