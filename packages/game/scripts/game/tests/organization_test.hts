
// 组织中每个等级的人数上限
// 数字越大，等级越低，0是掌门
fun maxMemberNumberOfOrganizationRank(n: int) {
  return n * n
}

// 组织发展度，等于组织可以拥有的境界上限
// 至少是 1，表示可以拥有 筑基 1 人，和 炼气 4 人
fun maxMemberNumberOfOrganizationDevelopment(n: int) {
  assert(n > 0)
  var number = 0
  for (var i in range(n + 1)) {
    number += maxMemberNumberOfOrganizationRank(i)
  }
  return number
}

for (var i in range(13, 1)) {
  print(i, maxMemberNumberOfOrganizationRank(i), maxMemberNumberOfOrganizationDevelopment(i))
}