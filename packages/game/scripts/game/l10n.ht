import 'game.ht'

external fun updateGameLanguagesData

fun addLocalizations(langs: List) {
  for (final lang in langs) {
    final langId = lang.languageId
    final langData = game.languages[langId]
    for (final key in lang.keys) {
      langData[key] = lang[key]
    }
  }
}

fun setCurrentLanguage(id: str) {
  game.languages.current = game.languages[id]
}

fun getLocalization(id: str) {
  return game.languages.current[id]
}