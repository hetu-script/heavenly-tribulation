import 'game.ht'
import 'entity/character.ht'
import 'l10n.ht'

fun onGameEvent(id: str, [arg]) {
  for (final mod of game.mods) {
    final handler = mod[id];
    if(handler is function) {
      handler(arg)
    }
  }
}

fun newGame {
  
}

fun nextTick {
  onGameEvent('onUpdate')
  ++game.timestamp
}
